.toggle {
  display: inline-block;
  padding: 3px;
  background: #ccc;
  border-radius: 20px;
}

.indicator {
  display: block;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: #fff;
  transition: all 0.3s;
  margin-right: 20px;

  &.on {
    margin-right: 0px;
    margin-left: 20px;
  }
}
